{
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2018
  },
  "env": {
    "node" : true,
    "browser": true,
    "es6": true,
    "jquery": true
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "quotes": [
      "error",
      "single"
    ],
    "no-console": 0,
    "no-unused-vars": [
      "warn"
    ]
  }
}